---
import Header from "../components/Header.astro";
import Seo from "../components/Seo.astro";
import Schema from "../components/Schema.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const { pageTitle } = Astro.props;

const isProduction = import.meta.env.MODE === "production";
---

<html lang="es" class="bg-[#151515]">
  <head>
    {isProduction && (
    <>
    <script
        is:inline
        async
        src="https://www.googletagmanager.com/gtag/js?id=G-ZY4JSH3L6H"
    ></script>
    <script is:inline>
        window.dataLayer = window.dataLayer || [];
        function gtag() {{ dataLayer.push(arguments); }}
        gtag("js", new Date());
        gtag("config", "G-ZY4JSH3L6H");
    </script>
    </>
)}
  <Seo 
    title={pageTitle}
    description="Creamos páginas web modernas y rápidas en Colombia. Sitios optimizados que convierten visitas en clientes. Cotiza hoy mismo."
    url="https://www.aciduslabs.com"
    image="https://www.aciduslabs.com/images/og-image.jpg"
    creator="AcidusLabs"
  />
    <Schema 
    localBusiness={{
      name: "AcidusLabs - Diseño Web Profesional",
      image: "https://www.aciduslabs.com/images/og-image.jpg",
      url: "https://www.aciduslabs.com",
      telephone: "+57-300-000-0000",
      address: {
        street: "Calle 123 #45-67",
        city: "Bogotá",
        region: "Cundinamarca",
        postalCode: "110111",
        country: "CO"
      },
      priceRange: "$$",
      sameAs: [
        "https://facebook.com/tumarca",
        "https://instagram.com/tumarca",
        "https://linkedin.com/company/tumarca"
      ]
    }}
    faq={[
      {
        question: "¿Cuánto cuesta un diseño web profesional en Colombia?",
        answer: "Nuestros planes inician desde $1.200.000 COP, optimizados para móviles y SEO."
      },
      {
        question: "¿Cuánto tiempo tarda el desarrollo de una página web?",
        answer: "Entre 2 a 4 semanas según la complejidad del proyecto."
      }
    ]}
  />
  </head>
  <body class="flex flex-col max-w-[1080px] md:mx-auto pb-20">
    <Header />
    <slot />
    <script>
      import "../scripts/menu.js";
      import "../scripts/overlayProject.js";
    </script>
  </body>
</html>
