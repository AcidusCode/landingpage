---
import Header from "../components/Header.astro";
import Seo from "../components/Seo.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const { pageTitle } = Astro.props;

const isProduction = import.meta.env.MODE === "production";
---

<html lang="es" class="bg-[#151515]">
  <head>
    {isProduction && (
    <>
    <script
        is:inline
        async
        src="https://www.googletagmanager.com/gtag/js?id=G-ZY4JSH3L6H"
    ></script>
    <script is:inline>
        window.dataLayer = window.dataLayer || [];
        function gtag() {{ dataLayer.push(arguments); }}
        gtag("js", new Date());
        gtag("config", "G-ZY4JSH3L6H");
    </script>
    </>
)}
  <Seo 
    title={pageTitle}
    description="Creamos páginas web modernas y rápidas en Colombia. Sitios optimizados que convierten visitas en clientes. Cotiza hoy mismo."
    url="https://www.aciduslabs.com"
    image="https://www.aciduslabs.com/images/og-image.jpg"
    creator="AcidusLabs"
  />
  </head>
  <body class="flex flex-col max-w-[1080px] md:mx-auto">
    <Header />
    <slot />
    <script>
      import "../scripts/menu.js";
      import "../scripts/overlayProject.js";
    </script>
  </body>
</html>
