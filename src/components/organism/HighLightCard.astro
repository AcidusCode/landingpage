---
import Image from "astro/components/Image.astro";

import ExternalLinkIcon from "../icons/ExternalLinkIcon.astro";
import CtaButton from "../atoms/CtaButton.astro";

const {
  title,
  subtitle,
  preHeading,
  heading,
  description,
  tag,
  color,
  cover,
  icon: Icon,
  textAlign = "left",
  footer = true,
  cta,
} = Astro.props;
---

<div
  class="rounded-2xl flex flex-col md:items-center max-w-[900px]"
  style={{ background: color }}
>
  <div class="relative p-4 flex flex-col md:flex-row items-center">
    <div class="px-4 md:px-14 pb-4 items-center md:items-start flex flex-col gap-4 order-2 md:order-1">
      {
        preHeading && (
          <span class="text-[rgba(250,250,250,.6)]">{preHeading}</span>
        )
      }
      <p class={`text-2xl text-center md:text-left md:text-5xl font-bold leading-tight text-[#ddd]`}>
        {heading}
      </p>
      <p class={`text-lg text-center md:text-left font-light text-[rgba(250,250,250,0.7)]`}>
        {description}
      </p>
      <div class="flex mt-4">
        <CtaButton text={cta} ariaLabel={cta} color="#1D4ED8" />
      </div>
    </div>
    <Image
      src={cover}
      alt="Imagen cover del proyecto CentoApp."
      class="rounded-t-lg w-[90%] md:max-w-[300px] order-1 md:order-2"
    />
  </div>
</div>
