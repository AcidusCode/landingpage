---
import Image from "astro/components/Image.astro";
import centoCover from "../../images/Mask group.png";

import ExternalLinkIcon from "../icons/ExternalLinkIcon.astro";
import CentoAppIcon from "../projects/centoapp/CentoAppIcon.astro";

const { title, description, tag, color } = Astro.props;
---

<div class="rounded-2xl flex flex-col justify-end items-start" style={{ background: color }}>
  <div class="relative p-2 pb-20">
    <div class="absolute px-4 py-1 rounded-br-xl" style={{ backgroundColor: color }}>
      <span class="text-[#ddd] text-xs uppercase font-bold">{tag}</span>
    </div>
    <Image
      src={centoCover}
      alt="Imagen cover del proyecto CentoApp."
      class="rounded-t-lg"
    />
    <div class="px-4 pb-4 absolute bottom-0 left-0">
      <p class="text-2xl text-[#ddd] font-bold leading-tight pr-4">
        Simplificando tus finanzas personales
      </p>
      <p class="text-sm text-[rgba(250,250,250,0.7)]">
        Dise√±o de una experiencia de UX/UI intuitiva para ayudar a los usuarios
        a gestionar gastos y alcanzar sus metas de ahorro.
      </p>
    </div>
  </div>
  <div
    class="flex flex-row p-4 gap-2 bg-[rgba(0,0,0,0.15)] w-full justify-between md:flex-row"
  >
    <div class="flex gap-2 items-center">
      <div
        class="flex items-center justify-center bg-[rgba(0,0,0,0.5)] w-14 h-14 rounded-lg"
      >
        <CentoAppIcon />
      </div>
      <div>
        <h3 class="text-[#ddd] font-bold">{title}</h3>
        <p class="text-xs text-[rgba(250,250,250,0.7)] pr-2">
          {description}
        </p>
      </div>
    </div>
    <a
      href="#"
      class="flex items-center justify-center px-2 py-2 rounded-full text-xs font-medium text-[#ddd] gap-2 md:bg-[rgba(250,250,250,0.15)] md:px-8"
    >
      <ExternalLinkIcon />
      <span class="hidden md:inline">Ver Proyecto</span>
    </a>
  </div>
</div>
