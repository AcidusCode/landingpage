---
const {text, ariaLabel, color, icon: Icon} = Astro.props;
const bgColor = color ? `bg-[${color}]` : "bg-[rgba(250,250,250,.25)]";
---

<a
  href="#"
  class={`${bgColor} flex items-center gap-2 text-center justify-center text-white px-8 py-5 rounded-full hover:bg-[#004080] transition-colors duration-300`}
  style={{background: color}}
  aria-label={ariaLabel}
>
  {text} {Icon && <Icon />}
</a>
