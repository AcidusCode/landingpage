---
import Navigation from "./Navigation.astro";
import Hamburguer from "./Hamburguer.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<header>
  <nav class="">
    <div
      class="ctaBar flex items-center justify-center fixed z-100 gap-2 bottom-0 px-6 py-6 w-full md:hidden"
    >
      <Hamburguer />
      <div
        class="flex gap-4 pr-2 pl-6 items-center justify-center h-14 rounded-full bg-[rgba(60,60,60,.3)] shadow-xl backdrop-blur-3xl border border-[rgba(250,250,250,.1)]"
      >
        <p
          class="text-[rgb(250,250,250)]"
          style="text-shadow: 0px 0px 4px rgba(0,0,0,0.6);"
        >
          Solicita tu sitio web hoy
        </p>
        <a
          href="https://wa.me/message/TAWFTQC2LL3FB1"
          class="bg-[rgba(0,102,197,1)] px-2 py-2 rounded-full"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
          >
            <path
              d="M8.625 5.25L15.375 12L8.625 18.75"
              stroke="#CCCCCC"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </a>
      </div>
    </div>
    <Navigation />
  </nav>
</header>

<script>
  import "../scripts/menu.js";
  import gsap from "gsap";

  gsap.from(".ctaBar", {
    duration: .8,
    scale: 0.8,
    y: "100%",
    ease: "shine.out",
    delay: 2,
  });
</script>
