---
import InterSectionText from "../molecules/InterSectionText.astro";
import PhilosophyCard from "../organism/PhilosophyCard.astro";

import BrushIcon from "../icons/myprocess/BrushIcon.astro";
import PeopleIcon from "../icons/myprocess/PeopleIcon.astro";
import LensIcon from "../icons/myprocess/LensIcon.astro";

import HighLightCard from "../organism/HighLightCard.astro";
import laptopEmoji from "../../images/Emojis/laptop.png";
import RocketIcon from "../icons/RocketIcon.astro";

import Button from "../atoms/Button.astro";
---

<InterSectionText
  title="La mente detrás de los pixeles"
  description="Diseñador. Desarrollador. Estratega. Buscando el balance entre estética y funcionalidad. Mi misión es ayudarte a construir experiencias digitales que no solo se vean increíbles, sino que también impulsen tus objetivos de negocio."
  padding="60px"
/>
<div class="flex flex-col gap-16 pb-16">
  <PhilosophyCard
    icon={BrushIcon}
    title="Diseño con Propósito"
    description="Cada decisión de diseño tiene una razón de ser, enfocada en la experiencia del usuario y en los objetivos de tu negocio."
  />
  <PhilosophyCard
    icon={PeopleIcon}
    title="Socios, no Clientes"
    description="Creo en un proceso de colaboración constante para que juntos podamos dar vida a una visión que te represente totalmente."
  />
  <PhilosophyCard
    icon={LensIcon}
    title="Balance Perfecto"
    description="Mi objetivo es crear un sitio web que sea visualmente impactante y, a la vez, una herramienta de conversión eficiente."
  />
</div>
<div class="mx-8 flex flex-col gap-8">
  <HighLightCard
    heading="Construyamos algo sorprende juntos"
    description="Cuéntame sobre tu proyecto y hagámoslo realidad."
    tag={false}
    color="linear-gradient(204deg, #4DDC00 27.86%, #297600 73.45%)"
    cover={laptopEmoji}
    footer={false}
    textAlign="center"
  />
  <Button text="Enviame un mensaje" ariaLabel="Enviame un mensaje" icon={RocketIcon}/>
</div>
